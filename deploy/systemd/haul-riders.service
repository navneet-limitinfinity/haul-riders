[Unit]
Description=haul-riders Node.js service
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/haul-riders

# Use a Node binary that exists on your server (nvm/volta/system install).
ExecStart=/usr/bin/node /opt/haul-riders/src/server.js

Environment=NODE_ENV=production
EnvironmentFile=/opt/haul-riders/.env

Restart=always
RestartSec=3

# Basic hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true

[Install]
WantedBy=multi-user.target
