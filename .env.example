# Server
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
TRUST_PROXY=false

# Multi-store (optional)
# Point this at a local JSON file (example: `stores.example.json`).
STORES_FILE=

# Shopify (do not commit real tokens)
SHOPIFY_STORE=your-store.myshopify.com
SHOPIFY_TOKEN=shpat_your_token_here
SHOPIFY_API_VERSION=2025-10

# Shopify request hardening (optional)
SHOPIFY_TIMEOUT_MS=10000
SHOPIFY_MAX_RETRIES=2

# Auth
# - none: no auth enforcement
# - dev: hard-coded dev user (local)
# - firebase: Firebase Auth (verify ID tokens / session cookies) + role lookup in Firestore
AUTH_PROVIDER=dev
AUTH_REQUIRED=true

# Dev auth (AUTH_PROVIDER=dev)
DEV_AUTH_ROLE=shop
DEV_AUTH_STORE_ID=

# Firebase auth (AUTH_PROVIDER=firebase)
FIREBASE_USERS_COLLECTION=users
FIREBASE_SHOPS_COLLECTION=shops
FIREBASE_WEB_CONFIG_JSON={"apiKey":"AIzaSyBLe3y3Yvb2W78-MWHJub_xGubXsdGAIwc","authDomain":"haul-riders.firebaseapp.com","projectId":"haul-riders","storageBucket":"haul-riders.firebasestorage.app","messagingSenderId":"1046337783731","appId":"1:1046337783731:web:d6796e5212893bf0f86dc6","measurementId":"G-D5D7088MT8"}

# Server verification credentials (choose one)
FIREBASE_ADMIN_CREDENTIALS_JSON=
